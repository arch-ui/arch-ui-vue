{
  "name": "@arch-ui/arch-ui-monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "new": "pnpm --filter @arch-ui/arch-ui-vue new",
    "build": "pnpm --filter @arch-ui/arch-ui-vue build",
    "storybook:dev": "pnpm --filter @arch-ui/arch-ui-vue useDev && pnpm --filter @arch-ui/arch-ui-playground storybook",
    "storybook:build": "pnpm --filter @arch-ui/arch-ui-playground build-storybook",
    "test": "cross-env NODE_ENV=test pnpm --filter @arch-ui/arch-ui-components test",
    "docs:dev": "pnpm --filter @arch-ui/arch-ui-vue useDev && pnpm --filter @arch-ui/arch-ui-docs dev",
    "docs:build": "pnpm --filter @arch-ui/arch-ui-docs build",
    "prepare": "husky install",
    "format": "prettier --write .",
    "ts-check": "vue-tsc --noEmit -p tsconfig.json --composite false",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.vue --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.vue --ignore-path .gitignore --fix",
    "precommit": "lint-staged"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@arch-ui/arch-ui-components": "workspace:*",
    "@arch-ui/arch-ui-vue": "workspace:*",
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@popperjs/core": "^2.11.8",
    "async-validator": "^4.2.5",
    "lodash-es": "^4.17.21",
    "vue": "^3.4.27"
  },
  "devDependencies": {
    "@arch-ui/arch-ui-lint-config": "workspace:*",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.12.12",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vitest/coverage-v8": "^1.4.0",
    "@vue/test-utils": "^2.4.5",
    "@vue/tsconfig": "^0.5.1",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.1",
    "eslint": "7.17.0",
    "husky": "^7.0.2",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.10",
    "move-file-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "ora": "^8.1.1",
    "release-it": "^17.10.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.18.0",
    "sass": "^1.80.6",
    "tsx": "^4.19.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^1.6.0",
    "vue-tsc": "^1.8.27",
    "vue3-i18n": "^1.1.5",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,vue}": [
      "eslint --fix --ignore-path .gitignore",
      "prettier --write --ignore-unknown"
    ],
    "!(*.ts|*.tsx|*.js|*.jsx|*.vue)": "prettier --write --ignore-unknown"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "always",
        [
          "sentence-case",
          "lower-case"
        ]
      ]
    }
  }
}
